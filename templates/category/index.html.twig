{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8 mt-3 mb-3 text-center">
        {% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('category_add') }}">
			<img src="{{ asset('button/add.png') }}" width="200px" height="220px">
		</a>
		{% endif %}
    <table class="table table-responsive-md mt-3">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Products</th>
                {% if is_granted("ROLE_ADMIN") %}
					<th>Actions</th>
				{% endif %}
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                    {% for product in category.products %}
                        {{ product.name }}
                        <br>
                    {% endfor %}
                    </td>
                    {% if is_granted("ROLE_ADMIN") %}
						<td>
							<a class="text-decoration-none" href="{{ path('category_edit', {'id': category.id}) }}" style="margin-right:20px">
								<img src="{{ asset('button/edit.png') }}" width="50" height="50">
							</a>
							<a class="text-decoration-none" href="{{ path('category_delete', {'id': category.id}) }}" onclick="return confirm('Do you want to delete this?')">
								<img src="{{ asset('button/delete.png') }}" width="50" height="50">
							</a>
						</td>
					{% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
