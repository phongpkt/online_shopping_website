{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-md col-md-8 mt-3 mb-3 text-center">
		{% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('employee_add') }}">
			<img src="{{ asset('button/add.png') }}" width="200px" height="220px">
		</a>
		{% endif %}
		<table class="table table-responsive-md mt-3">
			<thead>
				<tr>
					<th>Employee ID</th>
					<th>Employee Name</th>
					<th>Employee Position</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for employee in employees %}
					<tr>
						<td>{{ employee.id }}</td>
						<td>{{employee.name}}</td>
                        <td>{{employee.position}}</td>
						<td>
							<a class="btn btn-primary" href="{{ path('employee_detail', {'id': employee.id}) }}" style="padding:10px;margin-right:20px">
								View detail
							</a>
							{% if is_granted("ROLE_ADMIN") %}
							<a href="{{ path('employee_edit', {'id' : employee.id }) }}">
								<img src="{{ asset('images/edit.png') }}" width="50" height="50">
							</a>
							<a href="{{ path('employee_delete', {'id' : employee.id }) }}" onclick="return confirm('Do you want to delete this employee ?')">
								<img src="{{ asset('images/delete.png') }}" width="50" height="50">
							</a>
							{% endif %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
