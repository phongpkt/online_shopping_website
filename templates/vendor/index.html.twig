{% extends 'base.html.twig' %}

{% block body %}
	<style>
		.row {
			width: 100%;
			text-align: center;
			margin-left: 7.5%;
		}
		.col-md-3{
			margin:20px;
		}
		.circle {
			border-radius: 50%;
		}
	</style>
	<div class="container text-center">
		{% if is_granted("ROLE_ADMIN") %}
			<a href="{{ path('vendor_add') }}">
				<img src="{{ asset('button/add.png') }}" width="200px" height="220px">
			</a>
		{% endif %}
		<div class="row">
			{% for vendor in vendors %}
				<div class="col-md-3">
					<a href="{{ path('vendor_detail', {'id': vendor.id}) }}">
						<img src="{{ asset('team/customer.png') }}" alt="Icon" width="100%" class="circle w3-hover-opacity">
					</a>
					<div class="w3-container w3-white">
						<p>
							<b>{{vendor.name}}</b>
						</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
